<resources>

    <!-- app theme -->

    <color name="primaryColor">#2196f3</color>
    <color name="primaryLightColor">#6ec6ff</color>
    <color name="primaryDarkColor">#0069c0</color>
    <color name="secondaryColor">#ffab00</color>
    <color name="secondaryLightColor">#ffdd4b</color>
    <color name="secondaryDarkColor">#c67c00</color>
    <color name="primaryTextColor">#000000</color>
    <color name="secondaryTextColor">#000000</color>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar" />

    <color name="actionBarButton">#FFFFFF</color>


    <!-- widgets -->

    <color name="cardview_background">@color/secondaryColor</color>


    <!-- text content -->

    <style name="TextView.Heading" parent="AppTheme">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="TextView.HeadingLarge" parent="AppTheme">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:fontFamily">@font/bebas_neue</item>
    </style>

</resources>