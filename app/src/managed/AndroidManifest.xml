<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="at.bitfire.davdroid">

    <application>

        <meta-data
            android:name="android.content.APP_RESTRICTIONS"
            android:resource="@xml/app_restrictions"/>

        <activity
            android:name=".ui.ManagedConfigActivity"
            android:parentActivityName=".ui.AboutActivity">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="http" android:host="*" android:pathPattern=".*davdroid-config\\.json"/>
                <data android:scheme="http" android:host="*" android:pathPattern=".*\\..*davdroid-config\\.json"/>
                <data android:scheme="http" android:host="*" android:pathPattern=".*\\..*\\..*davdroid-config\\.json"/>
                <data android:scheme="https" android:host="*" android:pathPattern=".*davdroid-config\\.json"/>
                <data android:scheme="https" android:host="*" android:pathPattern=".*\\..*davdroid-config\\.json"/>
                <data android:scheme="https" android:host="*" android:pathPattern=".*\\..*\\..*davdroid-config\\.json"/>
            </intent-filter>

        </activity>

    </application>

</manifest>