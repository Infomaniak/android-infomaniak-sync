<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
       android:id="@+id/license_info"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="8dp"
       android:textAppearance="@style/TextAppearance.AppCompat.Medium"
       android:text="@string/about_license_info_html"/>

    <TextView
        android:id="@+id/license_domains"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@plurals/about_license_domains"/>

    <TextView
        android:id="@+id/license_expires"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/about_license_valid_through"/>

</LinearLayout>