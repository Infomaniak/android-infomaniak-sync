<resources>

    <!-- colors -->

    <color name="primaryColor">#745bca</color>
    <color name="primaryLightColor">#a789fe</color>
    <color name="primaryDarkColor">#413098</color>
    <color name="secondaryColor">#307232</color>
    <color name="secondaryLightColor">#5fa15d</color>
    <color name="secondaryDarkColor">#004608</color>


    <!-- app theme -->

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar" />
    <color name="actionBarButton">@android:color/white</color>


    <!-- AddAccountActivity -->

    <style name="account_list_card">
        <item name="android:layout_width">match_parent</item>
        <item name="cardBackgroundColor">@color/secondaryColor</item>
    </style>


    <!-- widgets -->

    <color name="cardview_background">@color/secondaryColor</color>

    <style name="tablayout" parent="Base.Widget.Design.TabLayout">
        <item name="android:background">@color/secondaryColor</item>
    </style>

    <style name="toolbar_style" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/secondaryColor</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>


    <!-- text content -->

    <style name="TextView.Heading" parent="AppTheme">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="TextView.HeadingLarge" parent="AppTheme">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

</resources>